{
  "name": "palm-tree",
  "version": "1.0.0",
  "description": "A simple video sharing service",
  "main": "index.js",
  "scripts": {
    "start": "node -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Amirali-Amirifar/palm-tree.git"
  },
  "author": "Amirali Amirifar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Amirali-Amirifar/palm-tree/issues"
  },
  "homepage": "https://github.com/Amirali-Amirifar/palm-tree#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.8",
    "ts-node": "^9.0.0"
  }
}
